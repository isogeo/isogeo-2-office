{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and package",
            "type": "shell",
            "command": "./tool_build.ps1",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Tests and coverage",
            "type": "shell",
            "command": "./tool_test_coverage.ps1",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build - Create packaging venv",
            "type": "shell",
            "command": "py -3 -m venv venv_packaging",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build - Update venv",
            "type": "shell",
            "command": "./venv_packaging/Scripts/activate; python -m pip install -U pip; python -m pip install -U -r requirements.txt",
            "group": "build",
            "dependsOn": [
                "Build - Create venv"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build - UI compilation",
            "type": "shell",
            "command": "./tool_ui_compile.ps1",
            "group": "build",
            "dependsOn": [
                "Build - Update venv"
            ],
            "problemMatcher": []
        },
        {
            "label": "Format code and tests",
            "dependsOn": [
                "Format code",
                "Format tests"
            ],
            "problemMatcher": []
        },
        {
            "label": "Format code",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "black",
                "--target-version=py37",
                "./modules"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Format tests",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "black",
                "--target-version=py37",
                "./tests"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}