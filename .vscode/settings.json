{
    "python.pythonPath": "${workspaceFolder}\\.venv_tests\\Scripts\\python.exe",
    "python.envFile": "${workspaceFolder}/dev.env",
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": true,
    "pyqt-integration.qtdesigner.path": "designer",
    "pyqt-integration.linguist.cmd": "linguist",
    "pyqt-integration.pylupdate.cmd": "pylupdate5",
    "pyqt-integration.pylupdate.compile.addOptions": "-noobsolete -verbose",
    "pyqt-integration.pyrcc.cmd": "pyrcc5",
    "pyqt-integration.pyuic.cmd": "pyuic5"
}